<div class = "medium-6 medium-centered large-4 large-centered columns log-in-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row column">
      <h4 class="text-center">Registrate</h4>
        <%= f.label "Nombre de Usuario"%><br />
         <%= f.text_field :username, required: true%>
        <%= f.label "Nombre" %><br />
        <%= f.text_field :name, required: true%>
        <%= f.label "Apellido"%><br />
        <%= f.text_field :last_name %>
        <%= f.label "Email"  %><br />
        <%= f.email_field :email, placeholder: "ejemplo@ejemplo.com",  autofocus: true, required: true %>
        <%= f.label "Contraseña" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> Caracteres Mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", required: true %>
        <%= f.label "Confirme Contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
        <p><%= f.submit "Registrate", class: "button expanded" %></p>
      </div>
  <% end %>
    <p class="text-center">
      <%= render "devise/shared/links" %>
    </p>
</div>